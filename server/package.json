{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc",
    "build:aliases": "tsc-alias",
    "copy:email-templates": "cp -r src/email/templates dist/src/email/",
    "copy:gql-schemas": "cp -r src/schema dist/src/",
    "copy:all": "npm run copy:email-templates && npm run copy:gql-schemas",
    "build": "npm run build:ts && npm run build:aliases && npm run copy:all",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn index.ts",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-document-nodes": "4.0.16",
    "@graphql-codegen/typescript-mongodb": "3.0.1",
    "@graphql-codegen/typescript-resolvers": "4.5.1",
    "cross-env": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@graphql-tools/utils": "^10.9.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.15.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "nodemailer": "^7.0.5"
  }
}
